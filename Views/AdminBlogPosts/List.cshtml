@model List<CodeBlog.Models.Domain.BlogPost>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1 class="text-center">All Blog Posts - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5 m-3">
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Heading</th>
                        <th>Tags</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var blogPost in Model)
                    {
                        <tr>
                            <td>@blogPost.Id</td>
                            <td>@blogPost.Heading</td>
                            <td>
                                <div class="d-flex flex-wrap">
                                    <!-- Use flex-wrap to allow tags to wrap -->
                                    @foreach (var tag in blogPost.Tags)
                                    {
                                        <span class="badge bg-secondary me-1">@tag.Name</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <a asp-area="" asp-action="Edit" asp-controller="AdminBlogPosts" asp-route-id="@blogPost.Id" class="btn btn-primary">Edit</a> <!-- Added button class for styling -->
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-center">No Blog Found!</p> <!-- Center the message -->
    }
</div>
