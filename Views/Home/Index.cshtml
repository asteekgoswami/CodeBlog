<div class="container-fluid mb-5 bg-dark text-center p-5">
    <div class="row justify-content-center">
        <div class="col-10">
            <form method="get" asp-controller="Home" asp-action="Index">
                <div class="input-group mb-3">
                    <input type="text" class="form-control m-2" name="searchQuery" placeholder="Search query" value="@ViewBag.SearchQuery" />
                    <input type="date" class="form-control m-2" name="selectedDate" placeholder="Select date" value="@ViewBag.SelectedDate" id="selectedDate" />
                    <button type="submit" class="btn btn-warning m-2">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-5">
            @if(Model !=null && Model.BlogPosts.Any())
            {
                foreach(var blogPost in Model.BlogPosts)
                {
                    <div class="mb-5 bg-light box-shadow p-5">
                        <div>
                            <img  src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading" class="mb-2 d-block img-fluid"/>
                            <h2 class="mb-4"> @blogPost.Heading</h2>
                            <p class="mb-4">Author : @blogPost.Author 
                                <br />
                                Published Date : @blogPost.PublishedDate
                            </p>


                            @* show tags *@
                            <p class="bb-4">
                                @foreach (var tag in blogPost.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            </p>
                            <p class="mb-4">
                                @blogPost.ShortDescription
                            </p>

                            <a class="btn btn-dark" asp-area="" 
                                asp-controller="Blogs"
                               asp-action="Index"
                               asp-route-urlHandle="@blogPost.UrlHandle">Read More</a>
                        </div>
                    </div>

                }
            }
            else
            {
                <p>No Result Found</p>
            }
        </div>
    </>
</div>




@section Scripts{
        <script>
            // Get today's date
            var today = new Date();
            var dd = String(today.getDate()).padStart(2, '0');
            var mm = String(today.getMonth() + 1).padStart(2, '0'); // January is 0!
            var yyyy = today.getFullYear();
            today = yyyy + '-' + mm + '-' + dd;

            // Set min attribute of the date input to today's date
            document.getElementById('selectedDate').max = today;
        </script>
}