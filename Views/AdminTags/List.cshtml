 @model List<CodeBlog.Models.Domain.Tag>
@{
    var nextPage = Convert.ToInt32(ViewBag.PageNumber) + 1;
    var prevPage = Convert.ToInt32(ViewBag.PageNumber) - 1;
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1 class="text-center">Show All Tags - Admin Functionality</h1>
    </div>
</div>

<form method="get" asp-controller="AdminTags" asp-action="List" class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="input-group">
                <input type="text" class="form-control" name="searchQuery" value="@ViewBag.SearchQuery" placeholder="Search by name" />
                <button type="submit" class="btn btn-warning">Search</button>
            </div>
        </div>
    </div>
</form>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>
                            Name
                            <br />
                            <div class="btn-group">
                                <a class="btn btn-light" asp-controller="AdminTags" asp-action="List" asp-route-pageNumber="@ViewBag.PageNumber" asp-route-pageSize="@ViewBag.Pagesize" asp-route-shortBy="Name" asp-route-sortDirection="Asc" asp-route-searchQuery="@ViewBag.SearchQuery"><i class="bi bi-arrow-up"></i></a>
                                <a class="btn btn-light" asp-controller="AdminTags" asp-action="List" asp-route-pageNumber="@ViewBag.PageNumber" asp-route-pageSize="@ViewBag.Pagesize" asp-route-shortBy="Name" asp-route-sortDirection="Desc" asp-route-searchQuery="@ViewBag.SearchQuery"><i class="bi bi-arrow-down"></i></a>
                            </div>
                        </th>
                        <th>
                            Display Name
                            <br />
                            <div class="btn-group">
                                <a class="btn btn-light" asp-controller="AdminTags" asp-action="List" asp-route-pageNumber="@ViewBag.PageNumber" asp-route-pageSize="@ViewBag.Pagesize" asp-route-shortBy="DisplayName" asp-route-sortDirection="Asc" asp-route-searchQuery="@ViewBag.SearchQuery"><i class="bi bi-arrow-up"></i></a>
                                <a class="btn btn-light" asp-controller="AdminTags" asp-action="List" asp-route-pageNumber="@ViewBag.PageNumber" asp-route-pageSize="@ViewBag.Pagesize" asp-route-shortBy="DisplayName" asp-route-sortDirection="Desc" asp-route-searchQuery="@ViewBag.SearchQuery"><i class="bi bi-arrow-down"></i></a>
                            </div>
                        </th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.DisplayName</td>
                            <td>
                                <a asp-controller="AdminTags" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item @(prevPage < 1 ? "disabled" : "")">
                    <a class="page-link" asp-controller="AdminTags" asp-action="List" asp-route-pageNumber="@prevPage" asp-route-pageSize="@ViewBag.PageSize" asp-route-shortBy="@ViewBag.ShortBy" asp-route-sortDirection="@ViewBag.SortDirection">Previous</a>
                </li>
                @for (var i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.PageNumber ? "active" : "")">
                        <a class="page-link" asp-controller="AdminTags" asp-action="List" asp-route-pageNumber="@i" asp-route-pageSize="@ViewBag.PageSize" asp-route-shortBy="@ViewBag.ShortBy" asp-route-sortDirection="@ViewBag.SortDirection">@i</a>
                    </li>
                }
                <li class="page-item @(nextPage > ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-controller="AdminTags" asp-action="List" asp-route-pageNumber="@nextPage" asp-route-pageSize="@ViewBag.PageSize" asp-route-shortBy="@ViewBag.ShortBy" asp-route-sortDirection="@ViewBag.SortDirection">Next</a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <p class="text-center">No Tags Found !</p>
    }
</div>
