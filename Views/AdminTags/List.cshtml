@model List<CodeBlog.Models.Domain.Tag>
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All Tags - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5" >
    @if(Model!=null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Display Name</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                   <tr>
                       <td>@item.Id</td>
                       <td>@item.Name</td>
                       <td>@item.DisplayName</td>
                       <td>
                           <a asp-controller="AdminTags" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                       </td>
                   </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Tags Found !</p>
    }
</div>